@model IEnumerable<IMS_Dashboard.ViewModels.PaymentMethodsVM.DisplayPaymentMethodViewModel>

@{
    ViewData["Title"] = "Payment Method List";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            @* <p class="card-description">
            Add class <code>.table-bordered</code>
            </p> *@
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @Html.DisplayNameFor(model => model.PaymentMethodName) </th>
                            <th> @Html.DisplayNameFor(model => model.Description) </th>
                            <th> @Html.DisplayNameFor(model => model.IsActive) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int rowNumber = 1;
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td> @rowNumber </td>
                                    <td> @payment.PaymentMethodName </td>
                                    <td> @payment.Description </td>
                                    <td> @payment.IsActive </td>
                                </tr>
                                rowNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
