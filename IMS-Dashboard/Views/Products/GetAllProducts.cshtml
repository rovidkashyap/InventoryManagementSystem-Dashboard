@model IEnumerable<IMS_Dashboard.ViewModels.ProductsVM.DisplayProductViewModel>

@{
    ViewData["Title"] = "Products List";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            @* <p class="card-description">
            Add class <code>.table-bordered</code>
            </p> *@
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @Html.DisplayNameFor(model => model.ProductName) </th>
                            <th> @Html.DisplayNameFor(model => model.ProductCode) </th>
                            <th> @Html.DisplayNameFor(model => model.CategoryName) </th>
                            <th> @Html.DisplayNameFor(model => model.ManufacturerName) </th>
                            <th> @Html.DisplayNameFor(model => model.Price) </th>
                            <th> @Html.DisplayNameFor(model => model.UnitOfMeasureName) </th>
                            <th> @Html.DisplayNameFor(model => model.Weight) </th>
                            <th> @Html.DisplayNameFor(model => model.Dimensions) </th>
                            <th> @Html.DisplayNameFor(model => model.Description) </th>
                            <th> @Html.DisplayNameFor(model => model.IsActive) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int rowNumber = 1;
                            @foreach (var products in Model)
                            {
                                <tr>
                                    <td> @rowNumber </td>
                                    <td> @products.ProductName </td>
                                    <td> @products.ProductCode </td>
                                    <td> @products.CategoryName </td>
                                    <td> @products.ManufacturerName </td>
                                    <td> Rs. @products.Price </td>
                                    <td> @products.UnitOfMeasureName </td>
                                    <td> @products.Weight </td>
                                    <td> @products.Dimensions </td>
                                    <td> @products.Description </td>
                                    <td> @products.IsActive </td>
                                </tr>
                                rowNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
