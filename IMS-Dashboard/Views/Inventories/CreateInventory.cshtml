@model IMS_Dashboard.ViewModels.InventoryVM.CreateInventoryViewModel

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Inventory</h4>
            @* <p class="card-description"> Basic form elements </p> *@
            <form asp-action="CreateInventory" class="forms-sample" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TransactionTypeId" class="control-label"></label>
                    <select class="form-select" asp-for="TransactionTypeId" asp-items="@Model.TransactionTypes"></select>
                    <span asp-validation-for="TransactionTypeId" class="text-danger"></span>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select class="form-select" asp-for="ProductId" asp-items="@Model.Products"></select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select class="form-select" asp-for="SupplierId" asp-items="@Model.Suppliers"></select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuantityAdded" class="control-label"></label>
                    <input asp-for="QuantityAdded" type="number" class="form-control" 
                    placeholder="Enter Quantity want to be added.." id="QuantityAdded">
                    <span asp-validation-for="QuantityAdded" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuantityRemoved" class="control-label"></label>
                    <input asp-for="QuantityRemoved" type="number" class="form-control" 
                    placeholder="Enter Quantity you want to removed.." id="QuantityRemoved">
                    <span asp-validation-for="QuantityRemoved" class="text-danger"></span>
                </div>

                @* <div class="form-group">
                    <label asp-for="QuantityInStock" class="control-label"></label>
                    <input asp-for="QuantityInStock" type="number" class="form-control" id="QuantityInStock">
                    <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                </div> *@

                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" type="number" class="form-control" placeholder="Enter Price of Unit...">
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Remark" class="control-label"></label>
                    <textarea asp-for="Remark" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Remark" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TransactionDate" class="control-label"></label>
                    <input asp-for="TransactionDate" type="date" class="form-control" 
                    placeholder="@DateTime.Now.ToShortDateString()">
                    <span asp-validation-for="TransactionDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>

            </form>

        </div>
    </div>
</div>


