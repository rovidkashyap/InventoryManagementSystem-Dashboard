@model IEnumerable<IMS_Dashboard.ViewModels.InventoryVM.DisplayInventoryViewModel>

@{
    ViewData["Title"] = "Inventory List";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            @* <p class="card-description">
            Add class <code>.table-bordered</code>
            </p> *@
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @Html.DisplayNameFor(model => model.ProductName) </th>
                            <th> @Html.DisplayNameFor(model => model.SupplierName) </th>
                            <th> @Html.DisplayNameFor(model => model.QuantityAdded) </th>
                            <th> @Html.DisplayNameFor(model => model.QuantityRemoved) </th>
                            <th> @Html.DisplayNameFor(model => model.QuantityInStock) </th>
                            <th> @Html.DisplayNameFor(model => model.UnitPrice) </th>
                            <th> @Html.DisplayNameFor(model => model.TransactionTypeName) </th>
                            <th> @Html.DisplayNameFor(model => model.Remark) </th>
                            <th> @Html.DisplayNameFor(model => model.TransactionDate) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int rowNumber = 1;
                            @foreach (var inventory in Model)
                            {
                                <tr>
                                    <td> @rowNumber </td>
                                    <td> @inventory.ProductName </td>
                                    <td> @inventory.SupplierName </td>
                                    <td> @inventory.QuantityAdded </td>
                                    <td> @inventory.QuantityRemoved </td>
                                    <td> @inventory.QuantityInStock </td>
                                    <td> @inventory.UnitPrice </td>
                                    <td> @inventory.TransactionTypeName </td>
                                    <td> @inventory.Remark </td>
                                    <td> @inventory.TransactionDate </td>
                                </tr>
                                rowNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
