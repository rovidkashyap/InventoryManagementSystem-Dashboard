@model IEnumerable<IMS_Dashboard.ViewModels.SuppliersVM.DisplaySupplierViewModel>

@{
    ViewData["Title"] = "Supplier List";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            @* <p class="card-description">
            Add class <code>.table-bordered</code>
            </p> *@
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @Html.DisplayNameFor(model => model.SupplierName) </th>
                            <th> @Html.DisplayNameFor(model => model.ContactName) </th>
                            <th> @Html.DisplayNameFor(model => model.PhoneNumber) </th>
                            <th> @Html.DisplayNameFor(model => model.Email) </th>
                            <th> @Html.DisplayNameFor(model => model.Address) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int rowNumber = 1;
                            @foreach (var suppliers in Model)
                            {
                                <tr>
                                    <td> @rowNumber </td>
                                    <td> @suppliers.SupplierName </td>
                                    <td> @suppliers.ContactName </td>
                                    <td> @suppliers.PhoneNumber </td>
                                    <td> @suppliers.Email </td>
                                    <td> @suppliers.Address, @suppliers.City, @suppliers.State, @suppliers.Country PINCODE - @suppliers.PostalCode </td>
                                </tr>
                                rowNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>