@model IEnumerable<IMS_Dashboard.ViewModels.CustomersVM.DisplayCustomerViewModel>

@{
    ViewData["Title"] = "Customers List";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            @* <p class="card-description">
            Add class <code>.table-bordered</code>
            </p> *@
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @Html.DisplayNameFor(model => model.CustomerName) </th>
                            <th> @Html.DisplayNameFor(model => model.Email) </th>
                            <th> @Html.DisplayNameFor(model => model.PhoneNumber) </th>
                            <th> @Html.DisplayNameFor(model => model.WhatsAppNumber) </th>
                            <th> @Html.DisplayNameFor(model => model.Gender) </th>
                            <th> @Html.DisplayNameFor(model => model.DateOfBirth) </th>
                            <th> @Html.DisplayNameFor(model => model.Address) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int rowNumber = 1;
                            @foreach (var customers in Model)
                            {
                                <tr>
                                    <td> @rowNumber </td>
                                    <td> @customers.CustomerName </td>
                                    <td> @customers.Email </td>
                                    <td> @customers.PhoneNumber </td>
                                    <td> @customers.WhatsAppNumber </td>
                                    <td> @customers.Gender </td>
                                    <td> @customers.DateOfBirth.ToShortDateString() </td>
                                    <td> @customers.Address, @customers.City, @customers.State, @customers.Country, PINCODE - @customers.PostalCode</td>
                                </tr>
                                rowNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

