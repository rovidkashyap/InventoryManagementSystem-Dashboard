@model IEnumerable<IMS_Dashboard.ViewModels.ManufacturerVM.DisplayManufacturerViewModel>

@{
    ViewData["Title"] = "Manufacturer List";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewData["Title"]</h4>
            @* <p class="card-description">
            Add class <code>.table-bordered</code>
            </p> *@
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> @Html.DisplayNameFor(model => model.ManufacturerName) </th>
                            <th> @Html.DisplayNameFor(model => model.ContactInfo) </th>
                            <th> @Html.DisplayNameFor(model => model.Address) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int rowNumber = 1;
                            @foreach (var manufacturers in Model)
                            {
                                <tr>
                                    <td> @rowNumber </td>
                                    <td> @manufacturers.ManufacturerName </td>
                                    <td> @manufacturers.ContactInfo </td>
                                    <td> @manufacturers.Address </td>
                                </tr>
                                rowNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

